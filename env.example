# Real Estate Photo AI Backend Configuration
# Copy this file to .env and update values for your environment

# Application Settings
APP_NAME="Real Estate Photo AI Backend"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Security
SECRET_KEY=your-secret-key-change-in-production-very-important
API_KEY=  # Optional: Set to enable API key authentication
ALLOWED_ORIGINS=["*"]  # Update with your actual domains in production

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
TEMP_DIR=temp

# AI Models Configuration
MODELS_CACHE_DIR=models_cache
DEVICE=cpu  # Use 'cuda' if you have GPU support

# Logging
LOG_LEVEL=INFO
LOG_FILE=  # Optional: Set path for log file

# Database (for future use)
DATABASE_URL=  # Optional: For future database integration

# Production Settings (Hostinger VPS)
# Uncomment and configure for production deployment
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
# LOG_LEVEL=WARNING
# API_KEY=your-production-api-key
# ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"] 